<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Custom_Source_Player"
        xmlns:WPF="clr-namespace:VisioForge.Core.UI.WPF;assembly=VisioForge.Core" 
        x:Class="Custom_Source_Player.MainWindow"
        mc:Ignorable="d"
        Title="Media Player SDK .Net - Custom Source Player Demo" Height="500" Width="750" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Panel - Source Settings -->
        <Grid Grid.Row="0" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="File name:" VerticalAlignment="Center"/>
            <TextBox x:Name="edFilename" Grid.Row="0" Grid.Column="1" Margin="5,0,5,0" VerticalAlignment="Center" Text="C:\samples\!video.mp4"/>
            <Button x:Name="btSelectFile" Grid.Row="0" Grid.Column="2" Content="..." Width="30" Click="btSelectFile_Click"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Filter CLSID:" VerticalAlignment="Center" Margin="0,5,0,0"/>
            <TextBox x:Name="edFilterCLSID" Grid.Row="1" Grid.Column="1" Margin="5,5,5,0" VerticalAlignment="Center" Text="{}{B98D13E7-55DB-4385-A33D-09FD1BA26338}"/>
            <CheckBox x:Name="cbDebugMode" Grid.Row="1" Grid.Column="2" Content="Debug" VerticalAlignment="Center" Margin="0,5,0,0"/>
        </Grid>

        <!-- Video View -->
        <WPF:VideoView x:Name="VideoView1" Grid.Row="1" Margin="10,5,10,5"/>

        <!-- Timeline and Time Display -->
        <Grid Grid.Row="2" Margin="10,5,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Slider x:Name="tbTimeline" Grid.Column="0" VerticalAlignment="Center" ValueChanged="tbTimeline_ValueChanged"/>
            <TextBlock x:Name="lbTime" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" Text="00:00:00 / 00:00:00" Width="130" TextAlignment="Right"/>
        </Grid>

        <!-- Bottom Panel - Controls -->
        <Grid Grid.Row="3" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btStart" Grid.Column="0" Content="Start" Width="60" Margin="0,0,5,0" Click="btStart_Click"/>
            <Button x:Name="btPause" Grid.Column="1" Content="Pause" Width="60" Margin="0,0,5,0" Click="btPause_Click"/>
            <Button x:Name="btResume" Grid.Column="2" Content="Resume" Width="60" Margin="0,0,5,0" Click="btResume_Click"/>
            <Button x:Name="btStop" Grid.Column="3" Content="Stop" Width="60" Margin="0,0,20,0" Click="btStop_Click"/>

            <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <TextBlock Text="Audio output:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="cbAudioOutput" Width="180" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Column="5" Text="Volume:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider x:Name="tbVolume" Grid.Column="6" Width="100" Minimum="0" Maximum="100" Value="80" VerticalAlignment="Center" ValueChanged="tbVolume_ValueChanged"/>
        </Grid>
    </Grid>
</Window>
