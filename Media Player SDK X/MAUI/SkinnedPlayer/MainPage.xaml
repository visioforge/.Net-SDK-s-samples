<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkinnedPlayer_MAUI.MainPage"
             xmlns:my="clr-namespace:VisioForge.Core.UI.MAUI;assembly=VisioForge.Core.UI.MAUI"
             xmlns:skins="clr-namespace:VisioForge.Core.UI.MAUI.Skins;assembly=VisioForge.Core.UI.MAUI" >

    <ScrollView>
        <!--WidthRequest="1280" HeightRequest="720"-->
        <Grid RowSpacing="10" RowDefinitions="Auto,*,Auto" Padding="{OnPlatform iOS='30,60,30,30', Default='10'}" >

            <HorizontalStackLayout Grid.Row="0" HorizontalOptions="End" Spacing="10">
                <Label Text="Skin:" VerticalOptions="Center" FontSize="14" TextColor="White" />
                <Button x:Name="btSkinSelect" Text="Default" Clicked="OnSkinSelectClicked" 
                        BackgroundColor="#512BD4" TextColor="White" 
                        CornerRadius="8" Padding="15,8" FontSize="12" />
            </HorizontalStackLayout>

            <my:VideoView Grid.Row="1"               
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                x:Name="videoView"
                Background="Gray"/>

            <skins:SkinPlayerControls x:Name="pbPanel" Grid.Row="2" SkinName="Default" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="0" Margin="0" />
        </Grid>
    </ScrollView>
    
</ContentPage>
