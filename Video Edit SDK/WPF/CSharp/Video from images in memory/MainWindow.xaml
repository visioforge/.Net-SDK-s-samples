<Window x:Class="Video_From_Images.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Video_From_Images"
        xmlns:wpf="clr-namespace:VisioForge.Core.UI.WPF;assembly=VisioForge.Core"
        mc:Ignorable="d"
        Title="Video Edit SDK .Net - Video from images in memory Demo (WPF)" Height="720" Width="950"
        Loaded="Window_Loaded" Closing="Window_Closing" Icon="visioforge_main_icon.ico">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Left Column: VideoView -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
            <wpf:VideoView x:Name="VideoView1" Height="400" />
        </StackPanel>

        <!-- Right Column: TabControl -->
        <TabControl Grid.Column="1" Grid.Row="0">
            <!-- Output Tab -->
            <TabItem Header="Output">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Image source" FontWeight="Bold" Margin="0,0,0,5" />
                        <RadioButton x:Name="rbImagesPredefined" Content="Predefined images" IsChecked="True" Margin="0,0,0,5" />
                        <RadioButton x:Name="rbImagesFolder" Content="Images from folder" Margin="0,0,0,5" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="edImagesFolder" Width="350" Margin="0,0,10,0" />
                            <Button Content="..." Click="btSelectImagesFolder_Click" Width="25" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <RadioButton x:Name="rbPreview" Content="Preview" Margin="0,0,15,0" />
                            <RadioButton x:Name="rbConvert" Content="Convert" IsChecked="True" />
                        </StackPanel>

                        <CheckBox x:Name="cbResize" Content="Resize" Margin="0,5,0,5" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Width" Width="50" VerticalAlignment="Center" />
                            <TextBox x:Name="edWidth" Text="1280" Width="60" />
                            <TextBlock Text="Height" Width="50" VerticalAlignment="Center" Margin="10,0,0,0" />
                            <TextBox x:Name="edHeight" Text="720" Width="60" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock Text="Frame rate" Width="80" VerticalAlignment="Center" />
                            <ComboBox x:Name="cbFrameRate" Width="80">
                                <ComboBoxItem Content="1" />
                                <ComboBoxItem Content="2" />
                                <ComboBoxItem Content="3" />
                                <ComboBoxItem Content="5" />
                                <ComboBoxItem Content="8" />
                                <ComboBoxItem Content="10" />
                                <ComboBoxItem Content="12" />
                                <ComboBoxItem Content="15" />
                                <ComboBoxItem Content="20" />
                                <ComboBoxItem Content="25" />
                                <ComboBoxItem Content="29.97" />
                                <ComboBoxItem Content="30" />
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock Text="Output format" Width="80" VerticalAlignment="Center" />
                            <ComboBox x:Name="cbOutputFormat" Width="200" SelectionChanged="cbOutputFormat_SelectionChanged">
                                <ComboBoxItem Content="AVI" />
                                <ComboBoxItem Content="MKV" />
                                <ComboBoxItem Content="WMV" />
                                <ComboBoxItem Content="DV" />
                                <ComboBoxItem Content="WebM" />
                                <ComboBoxItem Content="FFMPEG (sw)" />
                                <ComboBoxItem Content="FFMPEG (exe)" />
                                <ComboBoxItem Content="MP4 (sw)" />
                                <ComboBoxItem Content="MP4 (hw)" />
                                <ComboBoxItem Content="Animated GIF" />
                                <ComboBoxItem Content="Encrypted" />
                            </ComboBox>
                            <Button Content="Configure" Click="btConfigure_Click" Width="70" Margin="10,0,0,0" />
                        </StackPanel>

                        <TextBlock Text="Output file" Margin="0,5,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBox x:Name="edOutput" Width="370" />
                            <Button Content="..." Click="btSelectOutput_Click" Width="25" Margin="10,0,0,0" />
                        </StackPanel>

                        <CheckBox x:Name="cbDebugMode" Content="Debug mode" Margin="0,10,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Video Processing Tab -->
            <TabItem Header="Video processing">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Lightness" />
                        <Slider x:Name="tbLightness" Minimum="-255" Maximum="255" Value="0" ValueChanged="tbLightness_ValueChanged" />

                        <TextBlock Text="Saturation" Margin="0,5,0,0" />
                        <Slider x:Name="tbSaturation" Minimum="0" Maximum="511" Value="255" ValueChanged="tbSaturation_ValueChanged" />

                        <TextBlock Text="Contrast" Margin="0,5,0,0" />
                        <Slider x:Name="tbContrast" Minimum="0" Maximum="255" Value="0" ValueChanged="tbContrast_ValueChanged" />

                        <TextBlock Text="Darkness" Margin="0,5,0,0" />
                        <Slider x:Name="tbDarkness" Minimum="0" Maximum="255" Value="0" ValueChanged="tbDarkness_ValueChanged" />

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox x:Name="cbFlipX" Content="Flip X" Checked="cbFlipX_CheckedChanged" Unchecked="cbFlipX_CheckedChanged" Margin="0,0,15,0" />
                            <CheckBox x:Name="cbFlipY" Content="Flip Y" Checked="cbFlipY_CheckedChanged" Unchecked="cbFlipY_CheckedChanged" Margin="0,0,15,0" />
                            <CheckBox x:Name="cbGreyscale" Content="Greyscale" Checked="cbGreyscale_CheckedChanged" Unchecked="cbGreyscale_CheckedChanged" Margin="0,0,15,0" />
                            <CheckBox x:Name="cbInvert" Content="Invert" Checked="cbInvert_CheckedChanged" Unchecked="cbInvert_CheckedChanged" />
                        </StackPanel>

                        <TextBlock Text="Logos" Margin="0,15,0,5" />
                        <ListBox x:Name="lbLogos" Height="100" />
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="Add text logo" Click="btTextLogoAdd_Click" Width="100" />
                            <Button Content="Add image logo" Click="btImageLogoAdd_Click" Width="110" Margin="5,0,0,0" />
                            <Button Content="Edit" Click="btLogoEdit_Click" Width="50" Margin="5,0,0,0" />
                            <Button Content="Remove" Click="btLogoRemove_Click" Width="60" Margin="5,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Log Tab -->
            <TabItem Header="Log">
                <TextBox x:Name="mmLog" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" Margin="10" />
            </TabItem>
        </TabControl>

        <!-- Bottom: Start/Stop + Progress -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,5">
            <Button x:Name="btStart" Content="Start" Click="btStart_Click" Width="75" Height="30" />
            <Button x:Name="btStop" Content="Stop" Click="btStop_Click" Width="75" Height="30" Margin="10,0,0,0" IsEnabled="False" />
            <ProgressBar x:Name="ProgressBar1" Width="400" Height="25" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
