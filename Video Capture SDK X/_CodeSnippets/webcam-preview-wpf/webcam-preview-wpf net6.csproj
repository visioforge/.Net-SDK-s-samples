<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <RootNamespace>webcam_preview_wpf</RootNamespace>
    <TargetFrameworks>net6.0-windows</TargetFrameworks>
    <PlatformTarget>x64</PlatformTarget>
    <UseWPF>true</UseWPF>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <AssemblyTitle>webcam-preview-wpf</AssemblyTitle>
    <Product>webcam-preview-wpf</Product>
    <Copyright>Copyright (c) 2025</Copyright>
    <AssemblyVersion>2025.12.5.0</AssemblyVersion>
    <FileVersion>2025.12.5.0</FileVersion>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>
  <PropertyGroup>
    <TreatWarningsAsErrors>False</TreatWarningsAsErrors>
    <ApplicationIcon>visioforge_main_icon.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="webcam-preview-wpf.csproj.DotSettings" />
    <None Remove="visioforge_main_icon.ico" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="visioforge_main_icon.ico" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="VisioForge.CrossPlatform.Core.Windows.x64" Version="2025.11.0" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="VisioForge.DotNet.VideoCapture" Version="2026.2.12" />
  </ItemGroup>
</Project>