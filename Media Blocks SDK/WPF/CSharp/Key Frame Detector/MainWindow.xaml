<Window x:Class="key_frame_detector_mb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:key_frame_detector_mb"
        mc:Ignorable="d"
        Title="Media Blocks SDK .Net - Key Frame Detector Code Snippet" Height="200" Width="400" Loaded="Window_Loaded" Closing="Window_Closing" Icon="visioforge_main_icon.ico">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Source file" />

            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="edSourceFile" Text="c:\samples\!video.mp4" Margin="0, 0, 10, 0" Width="300" />
                <Button Click="btSelectFile_Click" Content="..." Width="20" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Button x:Name="btStart" Content="Start" Click="btStart_Click" Width="50"  />
                <Button x:Name="btStop" IsEnabled="False" Content="Stop" Click="btStop_Click" Margin="10, 0, 0, 0" Width="50" />
                <ProgressBar x:Name="pbProgress" Margin="10, 0, 0, 0" Width="210" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
