<Window x:Class="Overlay_Manager_Demo.VideoOverlayOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Video Overlay Options" Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Position and Size" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        
        <Label Content="X:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbX" HorizontalAlignment="Left" Margin="100,42,0,0" Text="100" VerticalAlignment="Top" Width="60"/>
        
        <Label Content="Y:" HorizontalAlignment="Left" Margin="180,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbY" HorizontalAlignment="Left" Margin="260,42,0,0" Text="100" VerticalAlignment="Top" Width="60"/>
        
        <Label Content="Width:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbWidth" HorizontalAlignment="Left" Margin="100,72,0,0" Text="320" VerticalAlignment="Top" Width="60"/>
        
        <Label Content="Height:" HorizontalAlignment="Left" Margin="180,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbHeight" HorizontalAlignment="Left" Margin="260,72,0,0" Text="240" VerticalAlignment="Top" Width="60"/>
        
        <CheckBox x:Name="cbOriginalSize" Content="Use original size" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Checked="cbOriginalSize_Checked" Unchecked="cbOriginalSize_Unchecked"/>
        
        <Label Content="Playback Options" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        
        <CheckBox x:Name="cbLoop" Content="Loop video" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" IsChecked="True"/>
        
        <Label Content="Opacity:" HorizontalAlignment="Left" Margin="10,190,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="slOpacity" HorizontalAlignment="Left" Margin="100,194,0,0" VerticalAlignment="Top" Width="150" Minimum="0" Maximum="1" Value="1" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
        <Label x:Name="lbOpacityValue" Content="1.0" HorizontalAlignment="Left" Margin="260,190,0,0" VerticalAlignment="Top"/>
        
        <Label Content="Visual Effects" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        
        <Label Content="Stretch Mode:" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbStretchMode" HorizontalAlignment="Left" Margin="100,252,0,0" VerticalAlignment="Top" Width="150">
            <ComboBoxItem Content="None" IsSelected="True"/>
            <ComboBoxItem Content="Stretch"/>
            <ComboBoxItem Content="Letterbox"/>
            <ComboBoxItem Content="Crop to Fill"/>
        </ComboBox>
        
        <CheckBox x:Name="cbEnableShadow" Content="Enable shadow" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top"/>
        
        <Button x:Name="btOK" Content="OK" HorizontalAlignment="Left" Margin="80,320,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="btOK_Click"/>
        <Button x:Name="btCancel" Content="Cancel" HorizontalAlignment="Left" Margin="180,320,0,0" VerticalAlignment="Top" Width="75" Height="25" IsCancel="True"/>
    </Grid>
</Window>