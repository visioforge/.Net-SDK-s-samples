<Window x:Class="Overlay_Manager_Demo.ImageSequenceOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Image Sequence Options" Height="460" Width="400"
        Icon="visioforge_main_icon.ico"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Images" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <ListBox x:Name="lbImages" HorizontalAlignment="Stretch" Margin="10,40,10,0" VerticalAlignment="Top" Height="130"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <Label Content="Duration (s):" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbDuration" HorizontalAlignment="Left" Margin="100,177,0,0" Text="2.0" VerticalAlignment="Top" Width="60"/>

        <StackPanel Orientation="Horizontal" Margin="10,205,0,0" VerticalAlignment="Top">
            <Button x:Name="btAddImage" Content="Add Image" Width="85" Height="25" Margin="0,0,5,0" Click="btAddImage_Click"/>
            <Button x:Name="btRemoveImage" Content="Remove" Width="75" Height="25" Margin="0,0,5,0" Click="btRemoveImage_Click"/>
            <Button x:Name="btUpdateDuration" Content="Update Duration" Width="110" Height="25" Click="btUpdateDuration_Click"
                    ToolTip="Update duration of selected image"/>
        </StackPanel>

        <Label Content="Position and Size" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <Label Content="X:" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbX" HorizontalAlignment="Left" Margin="100,272,0,0" Text="100" VerticalAlignment="Top" Width="60"/>

        <Label Content="Y:" HorizontalAlignment="Left" Margin="180,270,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbY" HorizontalAlignment="Left" Margin="260,272,0,0" Text="100" VerticalAlignment="Top" Width="60"/>

        <Label Content="Width:" HorizontalAlignment="Left" Margin="10,300,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbWidth" HorizontalAlignment="Left" Margin="100,302,0,0" Text="0" VerticalAlignment="Top" Width="60" ToolTip="0 = original size"/>

        <Label Content="Height:" HorizontalAlignment="Left" Margin="180,300,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbHeight" HorizontalAlignment="Left" Margin="260,302,0,0" Text="0" VerticalAlignment="Top" Width="60" ToolTip="0 = original size"/>

        <Label Content="Playback Options" HorizontalAlignment="Left" Margin="10,335,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <CheckBox x:Name="cbLoop" Content="Loop sequence" HorizontalAlignment="Left" Margin="10,365,0,0" VerticalAlignment="Top" IsChecked="True"/>

        <Label Content="Opacity:" HorizontalAlignment="Left" Margin="150,360,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="slOpacity" HorizontalAlignment="Left" Margin="210,364,0,0" VerticalAlignment="Top" Width="120" Minimum="0" Maximum="1" Value="1" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
        <Label x:Name="lbOpacityValue" Content="1.0" HorizontalAlignment="Left" Margin="335,360,0,0" VerticalAlignment="Top"/>

        <Button x:Name="btOK" Content="OK" HorizontalAlignment="Left" Margin="110,395,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="btOK_Click"/>
        <Button x:Name="btCancel" Content="Cancel" HorizontalAlignment="Left" Margin="210,395,0,0" VerticalAlignment="Top" Width="75" Height="25" IsCancel="True"/>
    </Grid>
</Window>
