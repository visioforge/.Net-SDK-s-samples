<Window x:Class="Overlay_Manager_Demo.VideoOverlayViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:VisioForge.Core.UI.WPF;assembly=VisioForge.Core"
        mc:Ignorable="d"
        Title="Video Overlay View" Height="450" Width="600"
        Icon="visioforge_main_icon.ico"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid Background="Black">
        <Border BorderBrush="DarkGray" BorderThickness="2">
            <wpf:VideoView x:Name="VideoViewControl"/>
        </Border>
    </Grid>
</Window>
