<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBlocks_DataMatrix_Detection_Demo_WPF"
        xmlns:WPF="clr-namespace:VisioForge.Core.UI.WPF;assembly=VisioForge.Core" 
        x:Class="MediaBlocks_DataMatrix_Detection_Demo_WPF.MainWindow"
        mc:Ignorable="d"
        Title="Media Blocks SDK .Net - DataMatrix Detection Demo" Height="600" Width="900" Loaded="Window_Loaded" Closing="Window_Closing" Icon="visioforge_main_icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <WPF:VideoView Grid.Column="1" x:Name="VideoView1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300" Margin="10,10,10,0"/>

        <TabControl Grid.Column="0" Margin="10,10,0,10" VerticalAlignment="Stretch">
            <TabItem Header="Source">
                <StackPanel Orientation="Vertical" Margin="10,10,0,0">
                    <Label Content="Video input device" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cbVideoInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" SelectionChanged="cbVideoInput_SelectionChanged"/>
                    <Label Content="Video format and frame rate" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="cbVideoFormat" Width="320" SelectionChanged="cbVideoFormat_SelectionChanged"/>
                        <ComboBox x:Name="cbVideoFrameRate" Margin="10,0,0,0" Width="50"/>
                        <Label Content="fps" />
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="DataMatrix Codes">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="10,10,10,5">
                        <Label Content="DataMatrix Detection Settings" FontWeight="Bold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0" Grid.Column="0" Content="Frame Skip:"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <Slider x:Name="slFrameSkip" Width="150" Minimum="0" Maximum="10" Value="0" SmallChange="1" LargeChange="2" TickPlacement="BottomRight" TickFrequency="1" ValueChanged="slFrameSkip_ValueChanged"/>
                                <Label x:Name="lbFrameSkipValue" Content="0" Width="30"/>
                            </StackPanel>
                            
                            <Label Grid.Row="1" Grid.Column="0" Content="Timeout (ms):"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                <Slider x:Name="slTimeout" Width="150" Minimum="100" Maximum="2000" Value="500" SmallChange="100" LargeChange="500" TickPlacement="BottomRight" TickFrequency="500" ValueChanged="slTimeout_ValueChanged"/>
                                <Label x:Name="lbTimeoutValue" Content="500" Width="50"/>
                            </StackPanel>
                            
                            <Label Grid.Row="2" Grid.Column="0" Content="Max Codes:"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <Slider x:Name="slMaxCodes" Width="150" Minimum="1" Maximum="10" Value="1" SmallChange="1" LargeChange="2" TickPlacement="BottomRight" TickFrequency="1" ValueChanged="slMaxCodes_ValueChanged"/>
                                <Label x:Name="lbMaxCodesValue" Content="1" Width="30"/>
                            </StackPanel>
                            
                            <CheckBox Grid.Row="3" Grid.Column="1" x:Name="cbDebugLogging" Content="Enable Debug Logging" Margin="0,5,0,0"/>
                        </Grid>
                    </StackPanel>

                    <ListBox Grid.Row="1" x:Name="lbDataMatrixCodes" Margin="10,5,10,5" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="2">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="DataMatrix ({0}x{1})">
                                                    <Binding Path="Rows"/>
                                                    <Binding Path="Cols"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Value}" TextWrapping="Wrap" FontFamily="Consolas"/>
                                        <TextBlock FontSize="10" Foreground="Gray">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="Timestamp: {0} | Frame: {1}">
                                                    <Binding Path="Timestamp"/>
                                                    <Binding Path="FrameNumber"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock FontSize="10" Foreground="DarkGray">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="Position: ({0:F0},{1:F0}) to ({2:F0},{3:F0})">
                                                    <Binding Path="TopLeft"/>
                                                    <Binding Path="TopRight"/>
                                                    <Binding Path="BottomLeft"/>
                                                    <Binding Path="BottomRight"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Grid.Row="2" x:Name="btClearDataMatrix" Content="Clear DataMatrix Codes" HorizontalAlignment="Center" Width="150" Margin="0,5,0,10" Click="btClearDataMatrix_Click"/>
                </Grid>
            </TabItem>

            <TabItem Header="Log">
                <Grid>
                    <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                        <CheckBox x:Name="cbDebugMode" Width="110">Debug mode</CheckBox>
                        <CheckBox x:Name="cbTelemetry">Telemetry</CheckBox>
                    </StackPanel>

                    <TextBox x:Name="mmLog" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,40,10,10" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,320,0,0">
            <Button x:Name="btStart" Content="Start" Width="60" Click="btStart_Click"/>
            <Button x:Name="btPause" Content="Pause" Width="60" Margin="10,0,0,0" Click="btPause_Click"/>
            <Button x:Name="btResume" Content="Resume" Width="60" Margin="10,0,0,0" Click="btResume_Click"/>
            <Button x:Name="btStop" Content="Stop" Width="60" Margin="10,0,0,0" Click="btStop_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,360,0,0">
            <TextBlock x:Name="lbTime" Text="00:00:00" FontSize="14" Margin="0,0,0,5"/>
            <TextBlock x:Name="lbDetectionCount" Text="DataMatrix codes detected: 0" FontSize="12"/>
            <TextBlock x:Name="lbLastDetection" Text="" FontSize="10" Foreground="DarkGray" Margin="0,2,0,0"/>
        </StackPanel>
    </Grid>
</Window>