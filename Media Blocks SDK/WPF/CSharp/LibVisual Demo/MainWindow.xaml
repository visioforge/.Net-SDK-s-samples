<Window x:Class="LibVisual_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibVisual_Demo"
        mc:Ignorable="d"
        Title="LibVisual Audio Visualizer Demo - VisioForge Media Blocks SDK" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <GroupBox Grid.Row="0" Header="Controls" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Audio File Selection -->
                <Label Grid.Row="0" Grid.Column="0" Content="Audio File:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="tbFilename" Margin="5" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="2" Name="btSelectFile" Content="Browse..." Click="btSelectFile_Click" Margin="5" Padding="10,5"/>
                
                <!-- Visualizer Selection -->
                <Label Grid.Row="1" Grid.Column="0" Content="Visualizer:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Name="cbVisualizer" Margin="5" VerticalAlignment="Center">
                    <ComboBoxItem Content="LibVisual Corona"/>
                    <ComboBoxItem Content="LibVisual Infinite"/>
                    <ComboBoxItem Content="LibVisual Bumpscope"/>
                    <ComboBoxItem Content="LibVisual LV Analyzer"/>
                    <ComboBoxItem Content="LibVisual LV Scope"/>
                    <ComboBoxItem Content="LibVisual Jakdaw"/>
                    <ComboBoxItem Content="LibVisual Jess"/>
                    <ComboBoxItem Content="LibVisual Oinksie"/>
                </ComboBox>
                
                <!-- Control Buttons -->
                <Button Grid.Row="2" Grid.Column="0" Name="btStart" Content="Start" Click="btStart_Click" Margin="5" Padding="15,5" IsEnabled="False"/>
                <Button Grid.Row="2" Grid.Column="1" Name="btStop" Content="Stop" Click="btStop_Click" Margin="5" Padding="15,5" IsEnabled="False"/>
                <Button Grid.Row="2" Grid.Column="2" Name="btPause" Content="Pause" Click="btPause_Click" Margin="5" Padding="15,5" IsEnabled="False"/>
                <Button Grid.Row="2" Grid.Column="3" Name="btResume" Content="Resume" Click="btResume_Click" Margin="5" Padding="15,5" IsEnabled="False"/>
            </Grid>
        </GroupBox>
        
        <!-- Video Display -->
        <GroupBox Grid.Row="1" Header="LibVisual Visualization" Margin="5">
            <Border Background="Black" Name="videoContainer">
                <Canvas Name="videoCanvas" Background="Black"/>
            </Border>
        </GroupBox>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="tbStatus" Text="Ready. Select an audio file and visualizer to begin."/>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>