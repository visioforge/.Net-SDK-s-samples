<Window x:Class="Transparent_Video_Mixer_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:VisioForge.Core.UI.WPF;assembly=VisioForge.Core"
        mc:Ignorable="d"
        Title="Media Blocks SDK - Transparent Video Mixer Demo"
        Height="700" Width="1050"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Icon="visioforge_main_icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="370"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Controls -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel Orientation="Vertical">

                <!-- Output Settings -->
                <GroupBox Header="Output Settings" Margin="0,0,0,10">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Resolution:" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="edWidth" Text="1280" Width="50"
                                     VerticalContentAlignment="Center" Margin="5,0,0,0"/>
                            <Label Content="x" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="edHeight" Text="720" Width="50"
                                     VerticalContentAlignment="Center"/>
                            <Label Content="FPS:" VerticalContentAlignment="Center" Margin="10,0,0,0"/>
                            <TextBox x:Name="edFrameRate" Text="30" Width="35"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Background Color -->
                <GroupBox Header="Background Color" Margin="0,0,0,10">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btPickBgColor" Width="50" Height="30"
                                    Click="btPickBgColor_Click" ToolTip="Pick background color">
                                <Rectangle x:Name="rectBgColor" Fill="CornflowerBlue"
                                           Width="40" Height="20"/>
                            </Button>
                            <Label x:Name="lbBgColor" Content="#6495ED"
                                   VerticalContentAlignment="Center" Margin="10,0,0,0"/>
                            <Label Content="(applied on Play)" VerticalContentAlignment="Center"
                                   Foreground="Gray" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Video Input 1 -->
                <GroupBox Header="Video Input 1" Margin="0,0,0,10">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Label Content="Video file (WebM/MOV with alpha)"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="edFile1" Width="270"
                                     VerticalContentAlignment="Center"/>
                            <Button x:Name="btSelectFile1" Content="..."
                                    Margin="5,0,0,0" Width="30"
                                    Click="btSelectFile1_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Video Input 2 -->
                <GroupBox Header="Video Input 2" Margin="0,0,0,10">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Label Content="Video file (WebM/MOV with alpha)"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="edFile2" Width="270"
                                     VerticalContentAlignment="Center"/>
                            <Button x:Name="btSelectFile2" Content="..."
                                    Margin="5,0,0,0" Width="30"
                                    Click="btSelectFile2_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Log -->
                <GroupBox Header="Log" Margin="0,0,0,10">
                    <TextBox x:Name="mmLog" Height="100"
                             IsReadOnly="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Background="Black" Foreground="LightGreen"
                             FontFamily="Consolas" FontSize="11"
                             BorderThickness="0" Padding="5"/>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Panel: Video Preview + Buttons -->
        <Grid Grid.Column="2" Margin="0,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <wpf:VideoView x:Name="VideoView1" Grid.Row="0"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal"
                        Margin="0,10,0,0" Height="30">
                <Button x:Name="btStart" Content="Play" Width="60"
                        Click="btStart_Click"/>
                <Button x:Name="btPause" Content="Pause" Width="60"
                        Margin="10,0,0,0" Click="btPause_Click"/>
                <Button x:Name="btResume" Content="Resume" Width="60"
                        Margin="10,0,0,0" Click="btResume_Click"/>
                <Button x:Name="btStop" Content="Stop" Width="60"
                        Margin="10,0,0,0" Click="btStop_Click"/>
                <Label x:Name="lbTimestamp" Content="00:00:00"
                       Margin="15,0,0,0" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
