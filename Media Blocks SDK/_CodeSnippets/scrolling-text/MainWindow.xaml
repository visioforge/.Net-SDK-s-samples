<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scrolling_text"
        xmlns:WPF="clr-namespace:VisioForge.Core.UI.WPF;assembly=VisioForge.Core" 
        x:Class="scrolling_text.MainWindow"
        mc:Ignorable="d"
        Title="Media Blocks SDK .Net - Scrolling Text Overlay" Height="500" Width="850" 
        Loaded="Window_Loaded" Closing="Window_Closing" Icon="visioforge_main_icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File selection row -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Video file:</TextBlock>
            <TextBox x:Name="edFilename" Text="c:\samples\!video.mp4" Width="500" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btSelectFile" Content="..." Width="30" Click="btSelectFile_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Video view -->
        <WPF:VideoView x:Name="videoView1" Grid.Row="1" Margin="10,0,10,0"/>

        <!-- Controls row -->
        <StackPanel Grid.Row="2" Margin="10">
            <!-- Scrolling text settings -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Scrolling text:</TextBlock>
                <TextBox x:Name="edScrollText" Text="Breaking News: Welcome to VisioForge Media Framework!" Width="400" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Speed:</TextBlock>
                <TextBox x:Name="edSpeed" Text="5" Width="40" VerticalAlignment="Center" Margin="0,0,10,0"/>
            </StackPanel>
            
            <!-- Playback controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btStart" Content="Start" Width="80" Click="btStart_Click" Margin="0,0,10,0"/>
                <Button x:Name="btStop" Content="Stop" Width="80" Click="btStop_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
