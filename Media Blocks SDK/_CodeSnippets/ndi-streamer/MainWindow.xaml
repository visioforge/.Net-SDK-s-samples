<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ndi_streamer_mb"
        xmlns:WPF="clr-namespace:VisioForge.Core.UI.WPF;assembly=VisioForge.Core.UI.WPF" x:Class="ndi_streamer_mb.MainWindow"
        mc:Ignorable="d"
        Title="Media Blocks SDK .Net - Screen source to NDI output sample" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing" Icon="visioforge_main_icon.ico">
    <Grid>
        <WPF:VideoView x:Name="videoView1" Margin="16,16,16,50"/>
        <Button x:Name="btStart" Content="Start" HorizontalAlignment="Right" Margin="0,0,71,22" VerticalAlignment="Bottom" Width="50" Click="btStart_Click"/>
        <Button x:Name="btStop" Content="Stop" HorizontalAlignment="Right" Margin="0,0,16,22" VerticalAlignment="Bottom" Width="50" Click="btStop_Click"/>
        <Label x:Name="label" Content="NDI SDK or NDI Tools are required to be installed" HorizontalAlignment="Left" Margin="16,0,0,19" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
